<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black_85per"
    tools:context="com.example.bingbindong.myapplication.MyServiceActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finish_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="finish_self"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_service"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/finish_button"
        android:text="start_service"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bind_service"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="bind_service"
        android:layout_below="@+id/start_service"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop_service"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="stop_service"
        android:layout_below="@+id/bind_service"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unbind_service"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="unbind_service"
        android:layout_below="@+id/stop_service"
        />

</RelativeLayout>
