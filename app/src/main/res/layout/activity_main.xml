<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bingbindong.myapplication.MainActivity">

    <LinearLayout
        android:id="@+id/textviewLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_disabled"
    android:text="支付规则："
    />
<TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
    android:background="@color/common_google_signin_btn_text_light_disabled"
            android:text="hello world\nhelloworld"
    />

    </LinearLayout>

    <TextView
        android:id="@+id/ddd"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewLayout1"
        android:gravity="center"
        android:text="Hello World!" />
    <TextView
        android:id="@+id/ccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ddd"
        android:text="Hello World!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/service_button"
        android:layout_below="@+id/ddd"
        android:layout_centerHorizontal="true"

        android:text="Service"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/scrollview1"
        android:paddingTop="20dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_below="@+id/service_button"
        >
<LinearLayout
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clipToPadding"

        android:layout_gravity="center"
        android:text="clip_To_Padding"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_button"

        android:layout_gravity="center"
        android:text="NEXT"
        />
    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/my_button2"

    android:layout_gravity="center"
    android:text="轮播图与动态添加视图"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_button3"

        android:layout_gravity="center"
        android:text="验证码"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_button4"

        android:layout_gravity="center"
        android:text="积分兑换面访提示"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="vertical" >

        <Button
            android:id="@+id/to_go_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="35dp"
            android:gravity="bottom"

            android:text="第1行"
            android:textSize="15sp" >
        </Button>

        <Button
            android:id="@+id/go_to_react"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:text="react native"
            android:textSize="15sp" >
        </Button>

        <Button
            android:id="@+id/window_alert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="window_alert"
            android:textSize="15sp" >
        </Button>

        <Button
            android:id="@+id/count_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="自动更新"
            android:textSize="15sp" >
        </Button>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/placeholder"
            >
        </EditText>


    </LinearLayout>
</LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_pwd"
        android:layout_below="@+id/scrollview1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="修改密码"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/update_pwd"
        tools:context=".LinearLayoutActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="visible"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111111"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2222"
                    />
                <CheckBox
                             android:id="@+id/checkbox1"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"


                             android:checked="true"/>
            </FrameLayout>



            <Button

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#aa0000"
                android:gravity="center_horizontal|center_vertical"
                android:text="postEvent"
                android:id="@+id/postEvent"
                android:textSize="15sp" >
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#00aa00"
                android:gravity="center_horizontal"
                android:text="postStickyEvent"
                android:id="@+id/postStickyEvent"
                android:textSize="15sp" >
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#0000aa"
                android:gravity="center|bottom"
                android:text="RecylerView"
                android:id="@+id/RecylerView"
                android:textSize="15sp" >
            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="#aaaa00"
                android:gravity="bottom"
                android:id="@+id/drawRect"
                android:text="drawRect"
                android:textSize="15sp" >
            </Button>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>

