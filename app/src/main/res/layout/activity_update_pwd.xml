<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_pwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bingbindong.myapplication.UpdatePWDActivity"
    android:background="#f1f1f1">

    <TextView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_navigation_bar"
        />

    <TextView
        android:id="@+id/navigation_bar_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/login_navigation_bar"
        android:layout_alignTop="@+id/navigation_bar"
        android:layout_alignLeft="@+id/navigation_bar"
        android:text="《返回"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#ffff"
        />

    <TextView
        android:id="@+id/navigation_bar_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@drawable/login_navigation_bar"
        android:layout_alignTop="@+id/navigation_bar"
        android:layout_alignLeft="@+id/navigation_bar"
        android:text="修改密码"
        android:textColor="#ffff"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:textSize="15sp"
        />

    <EditText
        android:layout_below="@+id/navigation_bar"
        android:layout_marginTop="5dp"
        android:id="@+id/orpwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="100dp"
        android:textSize="15sp"
        android:hint="请输入原密码"
        android:background="#ffff"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="原密码"
        android:layout_alignTop="@+id/orpwd"
        android:layout_alignLeft="@+id/orpwd"

        android:textColor="#0f0d0d"
        />

    <EditText
        android:id="@+id/newpwd"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/orpwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="100dp"
        android:textSize="15sp"
        android:hint="6-12位字母或数字"
        android:inputType="textPassword"
        android:background="#ffff"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="新密码"
        android:layout_alignTop="@+id/newpwd"
        android:layout_alignLeft="@+id/newpwd"
        android:textColor="#0f0d0d"
        />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="显"
        android:layout_alignTop="@+id/newpwd"
        android:layout_alignRight="@+id/newpwd"
        />

    <Button
        style="@style/LoginButton"


        android:text="提交"
        android:layout_below="@+id/newpwd"
        />

</RelativeLayout>
